---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets"
import htmlcss from "../assets/htmlcss.png"
const pageTitle = "Information";
const identity = {
    firstName: "Murat",
    lastName: "GÃ¼ler",
    school: "FOS",
};
const skills = ["Html", "Css", "JavaScript", "Astro"];

const skillColor = "lightblue";
const fontWeight = "bold";
const textCase = "uppercase";
---

<Layout pageTitle={pageTitle}>
    <h2>{pageTitle}</h2>

    <p>Mein Name ist {identity.firstName} {identity.lastName} und ich geh auf die {identity.school} in Kempten</p>

    <p>Ich versuche folgendes zu lernen:</p>

    <ul style="list-style-type: none;">
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    <Image src={htmlcss} width={200} alt="HTML und CSS" />

</Layout>

<style define:vars={{skillColor, fontWeight, textCase}}>

    .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
    }

</style>