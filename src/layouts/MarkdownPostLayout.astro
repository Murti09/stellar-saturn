---
const { frontmatter } = Astro.props;
import Layout from "./Layout.astro";
import '@fontsource/swanky-and-moo-moo';
---

<Layout pageTitle={frontmatter.title}>
    <p>Ver√∂ffentlicht am {frontmatter.pubDate.slice(0, 10)}</p>
    <p><em style="font-size: large;">{frontmatter.description}</em></p>
    <p>Von: {frontmatter.author}</p>

    <div class="mdfont">
        <slot />
    </div>
        
</Layout>

<style>
    .mdfont{
        font-family: 'Swanky and Moo Moo', sans-serif;
        font-size: 20pt;
    }
</style>